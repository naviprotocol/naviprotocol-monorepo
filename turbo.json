{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "umd/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "typedoc": {
      "dependsOn": ["^build"],
      "outputs": ["docs/docs/api/**"]
    },
    "start": {}
  }
}
